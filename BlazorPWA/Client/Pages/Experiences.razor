@page "/Experiences"
@using BlazorPWA.Shared


<PageTitle>Experiências</PageTitle>

<div class="center-box">
    <h3>Experiências:</h3>
</div>


@if (experience != null)
{
    <div class="transparent-box">
        <p><strong>Posição:</strong> @experience.Position</p>
        <p><strong>Empresa:</strong> @experience.Company</p>
        <p><strong>Empresa:</strong> @experience.Description</p>
    </div>
}
else
{
    <p>Carregando...</p>
}

@code {
    private Experience experience = new Experience()
    {
        Company = "Mercado ELetrônico",
        Position = "BackEnd .NET C#",
        Description = "- Criação de REST APIs para implementar funcionalidades em Aplicações Web de uso interno e externo." +
                "-Manutenções evolutivas e corretivas em API's." +
                "-Identificação e correções de bugs" +
                "-Implementação de novos recursos e manutenção de Aplicações Web MVC " +
                "-Realização de testes unitários com Nunit." +
                "-Manutenção em Microsserviços em Java, com RabbitMQ e Kafka" +
                "-Manutenção em Front com Vue.js, Html e Css"
             
    };
}

